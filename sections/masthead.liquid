        </svg>
      </div>
    </div>
  </div>

</div>

{% schema %}
{
  "name": "Masthead",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Lorem ipsum dolor sit amet",
      "label": "Title"
    },
    {
      "type": "color",
      "id": "colorHeading",
      "label": "Color heading",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Masthead"
    }
  ]
}
{% endschema %}