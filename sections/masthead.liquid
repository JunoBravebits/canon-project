{{ 'masthead.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .masthead__title {
    color: {{ section.settings.colorHeading }};
  }

{%- endstyle -%}

<div class="masthead">
  <div class="masthead__background">
    {%- if section.settings.image != blank -%}
      {{ section.settings.image | image_url: width: 1440 | image_tag: widths: '375, 550, 750, 1100, 1440, 1780, 2000, 3000, 3840', sizes: '100vw' }}
    {%- else -%}
      {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
    <div class="masthead__container">
      <div class="masthead__title">{{ section.settings.title }}</div>
      <div class="arrows">
        <svg class="a1" xmlns="http://www.w3.org/2000/svg" width="45" height="24" viewBox="0 0 45 24" fill="none">
